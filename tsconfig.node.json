{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron.vite.config.*",
    "src/main/**/*",
    "src/main/*.d.ts",
    "src/preload/**/*",
    "src/preload/*.d.ts",
    "src/preload/*.ts",
    "src/service/**/*",
  ],
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "types": ["electron-vite/node"]
  }
}
